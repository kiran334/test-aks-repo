{
	"name": "copy_pipeline",
	"properties": {
		"activities": [
			{
				"name": "Copy data from onprem to adls",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": true,
					"secureInput": true
				},
				"userProperties": [],
